<UserControl x:Class="Lunamy.Views.Step4"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Lunamy.ViewModels"
             Height="Auto" Width="Auto">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel  HorizontalAlignment="Left" Orientation="Horizontal">
                <Image Source="pack://application:,,,/Resources/step2.png" Height="35" Width="50"></Image>
                <TextBlock Text=" Informations de ..." FontSize="20" Margin="10,10,20,10"/>
            </StackPanel>
            <TextBlock Text="Vérifiez vos informations" Margin="10"/>
            <Button Content="Terminer" Command="{Binding FinishCommand}" Width="100" Margin="10"/>
            <Button Content="Précédent" Command="{Binding PreviousCommand}" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</UserControl>
