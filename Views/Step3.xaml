<UserControl x:Class="Lunamy.Views.Step3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Lunamy.ViewModels"
             Height="Auto" Width="Auto">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Étape 3: Confirmation" FontSize="20" Margin="10"/>
            <TextBlock Text="Vérifiez vos informations" Margin="10"/>
            <Button Content="Terminer" Command="{Binding FinishCommand}" Width="100" Margin="10"/>
            <Button Content="Précédent" Command="{Binding PreviousCommand}" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</UserControl>
